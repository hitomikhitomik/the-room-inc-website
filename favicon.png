.author-avatar {
  width: 60px;
  height: 60px;
  background-color: #ddd;
  border-radius: 50%;
  flex-shrink: 0;
}

.author-info h3 {
  margin-bottom: 0.5rem;
  color: #000;
}

.author-info p {
  font-size: 0.9rem;
  margin: 0;
}

.post-content {
  padding: 4rem 0;
}

.post-article {
  max-width: 800px;
  margin: 0 auto;
}

.post-intro {
  font-size: 1.25rem;
  color: #333;
  margin-bottom: 3rem;
  line-height: 1.6;
}

.post-article h2 {
  font-size: 2rem;
  font-weight: 400;
  margin: 3rem 0 1.5rem;
  color: #000;
}

.post-article p {
  font-size: 1.1rem;
  line-height: 1.7;
  margin-bottom: 1.5rem;
}

.post-article ul {
  margin: 1.5rem 0;
  padding-left: 2rem;
}

.post-article li {
  margin-bottom: 0.5rem;
  color: #666;
  line-height: 1.6;
}

.post-quote {
  margin: 3rem 0;
  padding: 2rem;
  background-color: #f8f9fa;
  border-left: 4px solid #000;
  border-radius: 0 8px 8px 0;
}

.post-quote blockquote {
  font-size: 1.25rem;
  font-style: italic;
  color: #333;
  margin: 0;
  line-height: 1.6;
}

.post-image {
  margin: 3rem 0;
  text-align: center;
}

.post-image img {
  width: 100%;
  max-width: 600px;
  border-radius: 8px;
}

.image-caption {
  font-size: 0.9rem;
  color: #666;
  margin-top: 0.5rem;
  font-style: italic;
}

.strategy-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
  margin: 2rem 0;
}

.strategy-card {
  background-color: #f8f9fa;
  padding: 1.5rem;
  border-radius: 8px;
}

.strategy-card h3 {
  font-size: 1.1rem;
  font-weight: 500;
  margin-bottom: 0.5rem;
  color: #000;
}

.strategy-card p {
  font-size: 0.9rem;
  margin: 0;
}

.post-cta {
  padding: 4rem 0;
  background-color: #f8f9fa;
}

.cta-content {
  max-width: 600px;
  margin: 0 auto;
  text-align: center;
}

.cta-content h2 {
  margin-bottom: 1rem;
}

.cta-content p {
  font-size: 1.1rem;
  margin-bottom: 2rem;
}

.related-articles {
  padding: 4rem 0;
}

.related-articles h2 {
  text-align: center;
  margin-bottom: 3rem;
}

.related-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.related-card {
  background-color: #fff;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.related-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
}

.related-image {
  height: 200px;
  overflow: hidden;
}

.related-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.related-card:hover .related-image img {
  transform: scale(1.05);
}

.related-content {
  padding: 1.5rem;
}

.related-content h3 {
  font-size: 1.1rem;
  font-weight: 500;
  margin-bottom: 0.75rem;
  color: #000;
  line-height: 1.3;
}

.related-content p {
  font-size: 0.9rem;
  margin-bottom: 1rem;
  color: #666;
}

.back-to-blog {
  padding: 2rem 0;
  text-align: center;
  border-top: 1px solid #eee;
}

/* Responsive Design */
@media (max-width: 768px) {
  .nav-menu {
    position: fixed;
    left: -100%;
    top: 70px;
    flex-direction: column;
    background-color: #fff;
    width: 100%;
    text-align: center;
    transition: 0.3s;
    box-shadow: 0 10px 27px rgba(0, 0, 0, 0.05);
    padding: 2rem 0;
    gap: 1rem;
  }

  .nav-menu.active {
    left: 0;
  }

  .nav-toggle {
    display: flex;
  }

  .hero-title {
    font-size: 2.8rem;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    margin-bottom: 2.5rem;
  }

  .btn-hero {
    padding: 16px 32px;
    font-size: 1rem;
    width: 100%;
    max-width: 320px;
  }

  h1 {
    font-size: 2.5rem;
  }

  h2 {
    font-size: 2rem;
  }

  .about-grid,
  .marketing-grid,
  .featured-card {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .about-image,
  .featured-image {
    height: 300px;
  }

  .form-row {
    grid-template-columns: 1fr;
  }

  .contact-form {
    padding: 2rem 1rem;
  }

  .form-buttons {
    flex-direction: column;
    align-items: center;
  }

  .form-buttons .btn {
    width: 100%;
    max-width: 300px;
  }

  .fee-row {
    flex-direction: column;
    gap: 0.5rem;
    text-align: center;
    padding: 1.5rem;
  }

  .platform-logos {
    grid-template-columns: 1fr;
  }

  .blog-hero h1,
  .post-meta-header h1 {
    font-size: 2rem;
  }

  .post-meta {
    flex-direction: column;
    gap: 0.5rem;
  }

  .author-card {
    flex-direction: column;
    text-align: center;
  }

  .strategy-grid {
    grid-template-columns: 1fr;
  }

  .newsletter-form {
    flex-direction: column;
  }

  .container {
    padding: 0 20px;
  }
}

@media (max-width: 480px) {
  .hero-title {
    font-size: 2.2rem;
  }

  .hero-subtitle {
    font-size: 1.1rem;
  }

  .container {
    padding: 0 16px;
  }
}
