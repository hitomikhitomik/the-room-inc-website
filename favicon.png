  align-items: center;
  gap: 0.5rem;
}

.location-icon {
  font-size: 0.9rem;
}

.portfolio-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 0.5rem;
}

.stat {
  display: flex;
  justify-content: space-between;
  font-size: 0.9rem;
}

.stat-label {
  color: #666;
}

.stat-value {
  font-weight: 500;
  color: #000;
}

